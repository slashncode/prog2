<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF000000" />
            <stroke
                android:color="#FF000000"
                android:width="2px" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF000000" />
            <stroke
                android:color="@color/black"
                android:width="2px" />
        </shape>
    </item>
</selector>